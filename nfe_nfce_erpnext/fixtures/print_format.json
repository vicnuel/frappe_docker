  "html": "<div class=\"page-break\">\n\t<div class=\"print-heading\">\n\t\t<div class=\"col-xs-7\">\n\t\t\t<h2>{{_(\"Purchase Order\")}}<br>\n\t\t\t\t<small>{{doc.name}}</small>\n\t\t\t</h2>\n\t\t</div>\n\t\t<div class=\"col-xs-5 text-right\">\n\t\t\t<img src=\"/files/logo_horizontal.png \" alt=\"Company Logo\">\n\t\t</div>\n\t</div>\n\t<hr class=\"col-xs-12\">\n\t<div class=\"row section-break\">\n\t\t{% set company = frappe.get_list(\"Company\", filters={'name': doc.company},\n\t\tfields=['razao_social','inscricao_estadual', 'tax_id', 'address_html']) %}\n\t\t<h5 class=\"text-center\">{{company[0].razao_social}}\n\t\t\t<br><small class=\"show\">{{doc.company}}</small>\n\t\t</h5>\n\t\t<div class=\"col-xs-5 column-break\">\n\t\t\t<div class=\"row\">\n\t\t\t\t<div class=\"col-xs-5 text-right\">\n\t\t\t\t\t<label>{{_(\"Inscrição Estadual\")}}</label>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"col-xs-7  value\">\n\t\t\t\t\t{{company[0].inscricao_estadual}}\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t\t<div class=\"row\">\n\t\t\t\t<div class=\"col-xs-5 text-right\">\n\t\t\t\t\t<label>{{_(\"Contact\")}}</label>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"col-xs-7  value\">\n\t\t\t\t\t{{doc.contact_display}}\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t\t<div class=\"row\">\n\t\t\t\t<div class=\"col-xs-5 text-right\">\n\t\t\t\t\t<label>{{_(\"Mobile No\")}}</label>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"col-xs-7  value\">\n\t\t\t\t\t{{doc.contact_mobile}}\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t\t<div class=\"row\">\n\t\t\t\t<div class=\"col-xs-5 text-right\">\n\t\t\t\t\t<label>{{_(\"Email\")}}</label>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"col-xs-7  value\">\n\t\t\t\t\t{{doc.owner}}\n\t\t\t\t\t{{frappe.user.doctype}}\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t</div>\n\t\t<div class=\"col-xs-7 column-break\">\n\t\t\t<div class=\"row\">\n\t\t\t\t<div class=\"col-xs-4 text-right\">\n\t\t\t\t\t<label>{{_(\"Tax Id\")}}</label>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"col-xs-8  value\">\n\t\t\t\t\t{{company[0].tax_id}}\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t\t<div class=\"row\">\n\t\t\t\t<div class=\"col-xs-4 text-right\">\n\t\t\t\t\t<label>{{_(\"Endereço\")}}</label>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"col-xs-8  value\">\n\t\t\t\t\t{% set links = frappe.get_all(\"Dynamic Link\", filters={\"link_doctype\": \"Company\", \"link_name\":\n\t\t\t\t\tdoc.company,\n\t\t\t\t\t\"parenttype\": \"Address\"}, fields=[\"parent\"]) %}\n\t\t\t\t\t{% if links %}\n\t\t\t\t\t{% set address = frappe.get_doc(\"Address\", links[0].parent) %}\n\t\t\t\t\t{{ address.address_line1 }}{% if address.number %}, {{ address.number }}{% endif -%}<br>\n\t\t\t\t\t{% if address.address_line2 %}{{ address.address_line2 }}<br>{% endif -%}\n\t\t\t\t\t{{ address.city }}, {{ address.state }}<br>\n\t\t\t\t\t{% if address.pincode %}{{ address.pincode }}<br>{% endif -%}\n\t\t\t\t\t<br>\n\t\t\t\t\t{% if address.phone %}{{ _(\"Phone\") }}: {{ address.phone }}<br>{% endif -%}\n\t\t\t\t\t{% if address.fax %}{{ _(\"Fax\") }}: {{ address.fax }}<br>{% endif -%}\n\t\t\t\t\t{% if address.email_id %}{{ _(\"Email\") }}: {{ address.email_id }}<br>{% endif -%}\n\n\t\t\t\t\t{% endif %}\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t</div>\n\t</div>\n\t<hr class=\"col-xs-12\">\n\t<div class=\"row section-break\">\n\t\t<div class=\"col-xs-5 column-break\">\n\t\t\t<div class=\"row\">\n\t\t\t\t<div class=\"col-xs-5 text-right\">\n\t\t\t\t\t<label>{{_(\"Supplier Name\")}}</label>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"col-xs-7  value\">\n\t\t\t\t\t{{doc.supplier_name}}\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t\t<div class=\"row\">\n\t\t\t\t<div class=\"col-xs-5 text-right\">\n\t\t\t\t\t<label>{{_(\"Date\")}}</label>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"col-xs-7  value\">\n\t\t\t\t\t{{doc.transaction_date}}\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t\t<div class=\"row\">\n\t\t\t\t<div class=\"col-xs-5 text-right\">\n\t\t\t\t\t<label>{{_(\"Required By\")}}</label>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"col-xs-7  value\">\n\t\t\t\t\t{{doc.schedule_date}}\n\t\t\t\t</div>\n\t\t\